<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout1"
        android:gravity="center|center_vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="30px"
            android:minHeight="30px"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:weightSum="100"
            android:id="@+id/linearLayout2"
            android:gravity="center_horizontal">

            <Button
                android:background="@drawable/icone01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/btnComprar"/>

            <Button
                android:background="@drawable/icone02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/btn2"/>

            <Button
                android:background="@drawable/icone03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/btnAjuda"/>

            <Button
                android:background="@drawable/icone04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/btnCarrinho"/>

        </LinearLayout>

         <LinearLayout
            android:orientation="horizontal"
            android:minWidth="30px"
            android:minHeight="30px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:weightSum="100"
            android:id="@+id/linearLayout3"
            android:layout_gravity="center">

            <TextView
                android:text="Novo Pedido"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textSize="16dp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/txtNovoPedido"/>

            <TextView
                android:text="Empório"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textSize="16dp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/txtEmporio"/>

            <TextView
                android:text="Promoção"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:textSize="16dp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/txtPromocao"/>

            <TextView
               android:text="Cobranças e Títulos"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textSize="16dp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/txtCobrancaETitulos"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/linearLayout4">

            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/webViewInicial" />

        </LinearLayout>
        
    </LinearLayout>
    
</RelativeLayout>